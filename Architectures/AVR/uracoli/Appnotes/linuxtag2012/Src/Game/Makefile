# $Id$

# === main parameters of the project =========================================

URACOLIDIR = ../../../../uracoli/install
OBJDIR=obj
LIBDIR=$(URACOLIDIR)/lib
TARGETS=$(OBJDIR) $(LIBDIR) __libradio__ __libioutil__
MCU=atmega128rfa1
BOARD=xxo
# DBGFMT=stabs for Linux
# DBGFMT=dwarf-2 for Windows

CCFLAGS=-Wall -Wundef -Os -g$(DBGFMT) -mmcu=$(MCU) -D$(BOARD) -std=gnu99
CCFLAGS+=-DF_CPU=$(F_CPU)
CCFLAGS+=-I$(URACOLIDIR)/inc -I.

LDFLAGS=-L$(LIBDIR) -lradio_$(BOARD) -lio_$(BOARD) -lc

#ID=usb:72
ID=usb

F_CPU=1000000

PRG=aw_scan_res.hex
# === custom settings ======================================================


CC=avr-gcc
AR=avr-ar
RANLIB=avr-ranlib

# allow defining avrdude/avarice tools by environment variables
# i.e. AVARICE='sudo avarice' before running makefiles
AVRDUDE?=avrdude
AVARICE?=avarice

# === autogenerated board rules ========================================
all: game_cap.hex game_res.hex
.PRECIOUS: %.elf

game_res.elf: game.c game_leds.o game_keys_res.o game_radio.o
	avr-gcc -o $@ -DRES=1 $(CCFLAGS) $+ $(LDFLAGS)

game_cap.elf: game.c game_leds.o game_keys_cap.o game_radio.o
	avr-gcc -o $@ -DCAP=1 $(CCFLAGS) $+ $(LDFLAGS)

%.o: %.c
	avr-gcc -c $(CCFLAGS) $< -o $@

%.elf: %.c
	avr-gcc -o $@ $(CCFLAGS) -I. -lc -mmcu=atmega128rfa1 $< $(LDFLAGS)

%.hex: %.elf
	avr-objcopy -O ihex $< $@

clean:
	rm -rf *.elf *.o *.hex

# === internal rules ===================================================
flash:  $(PRG).hex
	$(AVRDUDE) -P $(ID) -c jtag2 -p m128rfa1 -U $(PRG).hex

debug: $(PRG).hex
	$(AVARICE) -I -P atmega128rfa1 -2j $(ID) --detach :4242
	avr-gdb $(PRG).elf
